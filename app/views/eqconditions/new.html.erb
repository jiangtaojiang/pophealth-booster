<div id="dashboardContainer">
  <div id="pageContent">
    <%= render 'layouts/form_menu' %>
    <div id="equityMain">
      <div class="equityTable">

<h1>Add Condition for Patient</h1>
<h2 align="right"><%=@patient.firstname %> <%=@patient.lastname %></h2>
<h2 align="right">Member ID: <%=@patient.member_id %></h2>
<h5><%= flash[:notice] %></h5>
<table id="patientTable">
  <tr>
    <th>Condition</th>
    <th>What For?</th>
    <th>Add to Current Patient</th>
  </tr>
  <% CONDITION_NAMES.each do |code, name| %>
    <tr>
      <td><%=name %></td>
      <td width="400"><%=CONDITION_DESCS[code] %></td>
      <td>
        <% if CONDITION_OPTIONS[name] %>
        <%= form_tag("/conditions/"+@patient[:_id].to_s+"/"+"/create", :method => :post) do %>
          <%= hidden_field_tag(:code, code) %>
        <%= submit_tag("Add") %>
        <% end %>
        <%else %>
          Coming soon...
        <% end %>
      </td>
    </tr>
    <tr><th colspan="3">  </th></tr>
  <% end %>
  <tr><th colspan="3">  </th></tr>
</table>

      </div><!-- end #equityTable -->
    </div><!-- end #equityMain -->
  </div><!-- end #pageContent -->
</div><!-- end #container -->

